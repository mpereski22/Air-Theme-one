<div class="container mx-auto px-2 sm:px-4 xl:px-0">
  <div
        class="{% if section.settings.divider_border %}border-t{% endif %}"
        style="{% if section.settings.divider_spacing %}padding-bottom: {{ section.settings.divider_spacing }}rem;{% endif %}"
  ></div>
</div>

{% schema %}

{
  "name": "Divider",
  "settings": [
    {
      "type": "range",
      "id": "divider_spacing",
      "min": 0,
      "max": 15,
      "step": 1,
      "unit": "rem",
      "label": "Space",
      "default": 1
    },
    {
      "type": "checkbox",
      "id": "divider_border",
      "label": "Show top border",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Divider",
      "category": "Layout",
      "settings": {}
    }
  ]
}

{% endschema %}